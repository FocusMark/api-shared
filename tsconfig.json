{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],                       
    "types": [
      "node"
    ],
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}